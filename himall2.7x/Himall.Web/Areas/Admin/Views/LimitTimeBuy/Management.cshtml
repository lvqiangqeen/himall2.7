@using Himall.Core;
@{ ViewBag.Title = "LimitTimeBuyManagement";}
@model Himall.Model.LimitTimeMarketInfo
<script src="~/Scripts/jquery.hiMallDatagrid.js"></script>
<script src="~/Areas/Admin/Scripts/LimitTimeBuy.js"></script>
<script src="~/Scripts/jquery.placeholder.min.js"></script>
<script src="~/Scripts/bootstrap.autocomplete.js"></script>
<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <li  class="active" ><a>限时购活动列表</a></li>
        <li  ><a href="./SetSlide">页面设置</a></li>
        <li ><a href="./BoughtList">购买列表</a></li>
        <li ><a href="./MarketCategory">活动商品分类</a></li>
        <li ><a href="./ServiceSetting">服务费用设置</a></li>
        <li><a href="./ConfigSetting">参数设置</a></li>
    </ul>
    <div class="search-box" id="search-box">
        <form class="form-inline custom-inline">
            <div class="form-group">
                <label class="label-inline w75" for="">状态</label>
                <select class="form-control input-ssm" id="AuditStatus">
                    <option value="0">请选择</option>
                    @foreach (var item in Himall.Core.EnumHelper.ToDictionary<Himall.Model.FlashSaleInfo.FlashSaleStatus>())
                    {
                        <option value="@item.Key">@(((Himall.Model.FlashSaleInfo.FlashSaleStatus)item.Key).ToDescription())</option>
                    }

                </select>
            </div>
            <div class="form-group">
                <label class="label-inline w75" for="">店铺</label>
                <input class="form-control input-ssm" type="text" id="txtShopName">
            </div>
            <div class="form-group">
                <label class="label-inline w75" for="">活动名称</label>
                <input class="form-control input-ssm" type="text" id="txtTitle">
            </div>
            <div class="form-group"><button type="button" class="btn btn-primary btn-sm" id="searchButton">搜 索</button></div>
        </form>
    </div>

    <table id="list" class="table table-hover table-striped"></table>
</div>

<input type="hidden" value="@Url.Action("Management")" id="Uama0"/>