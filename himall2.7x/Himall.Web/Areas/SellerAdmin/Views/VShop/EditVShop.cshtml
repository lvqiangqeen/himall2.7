@model Himall.Model.VShopInfo
<style>
    html, body { height: 100%; }
    #logo label em,#wxlogobox label em{color:#999;}
    #logo label,#wxlogobox label{margin-top:-7px;}
</style>
<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <li><a href="Management">微店</a></li>
        <li class="active"><a>店铺信息配置</a></li>
    </ul>
    <form id="form" action="EditVShop" method="post">
        <div class="form-horizontal">
            <div class="form-group upload-img" id="logo"></div>
            <div class="form-group upload-img" id="wxlogobox"></div>
            <div class="form-group upload-img" id="frontCover"></div>
            <div class="form-group">
                <label for="" class="col-sm-2 control-label">微店标签：</label>
                <div class="col-sm-8">
                    <input type="text" id="tags" class="form-control input-sm input-half" name="tags" value="@Model.Tags" />
                </div>
                <div class="col-sm-10 col-sm-offset-2">
                    <p class="help-default">注：每个标签限4个字，非必填；可利用标签对微店特征进行说明；多个标签请用英文分号;隔开，微信端只显示<label style="color:red">前两个</label>标签</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">保 存</button>
                </div>
            </div>
        </div>
        <input type="hidden" id="logoSrc" name="logoSrc" value="@Model.Logo" />
        <input type="hidden" id="backgroundImageSrc" name="backgroundImageSrc" value="@Model.BackgroundImage" />
        <input type="hidden" id="wxlogoSrc" name="wxlogoSrc" value="@Model.WXLogo" />
        <input type="hidden" name="shopId" value="@ViewBag.ShopId" />
        <input type="hidden" name="id" value="@Model.Id" />
    </form>
</div>
<script src="~/Scripts/v.js"></script>
<script src="~/Scripts/jquery.himallUpload.js"></script>
<script src="~/Areas/SellerAdmin/Scripts/editVshop.js"></script>