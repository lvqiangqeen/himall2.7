<script type="text/javascript">
    $(document).on('click', '.view-mobile-shop', function() {
        $("#mobileshow").attr("src", $(this).attr("data-url"));
        $('.mobile-dialog').show();
        $('.cover').fadeIn();
    } );
    $(document).on('click', '.cover', function() {
        $('.mobile-dialog').hide();
        $("#mobileshow").attr("src", "about:blank");
        $('.cover').fadeOut();
    });
</script>
