/* shopcart.wxss */
page{
  background:#f5f5f5;
}
.page-section {
  font-size: 28rpx;
  background: #f5f5f5;
  height: 100%;
}

.bg-wihte {
  background: #fff;
}

.shopcart-t {
  position:fixed;
  top:0;
  left:0;
  right:0;
  z-index:2;
  padding:0 24rpx;
  font-size:32rpx;
  border-top:1rpx solid #e0e0e0;
  border-bottom:1rpx solid #e0e0e0;
  overflow:hidden;
  height:88rpx;
  line-height:88rpx;
}
.shopcart-t view{
  font-size: 32rpx;
}

.shopcart-ck {
  float: left;
  overflow: hidden;
  margin-right: 16rpx;
  margin-top: 40rpx;
}

.shopcart-edite {
  float: right;
  overflow: hidden;
}

.shopcart-item-num {
  overflow: hidden;
  font-size: 28rpx;
  text-align: right;
}

.shopcart-item-num text{ margin-right: 8rpx; font-size: 28rpx; color: #212121; }

.shopcart-m {
  overflow: hidden;
  margin:112rpx 0 120rpx 0;
}
.shopTitle{
  font-size:32rpx;
  padding:0 24rpx;
  border-bottom:1rpx solid #e0e0e0;
  overflow:hidden;
  height:88rpx;
  line-height:88rpx;
}
.shopTitle .dianpu{
    width:32rpx;
    height:18rpx;
    float:left;
    font-size:32rpx;
    margin-right:5rpx;
}
.shopTitle icon{
  float:left;
  line-height:1;
  margin-top:20rpx;
  margin-right: 6px;
}

.shopcart-m-item {
  overflow:hidden;
  width:702rpx;
  padding:32rpx 24rpx;
  position:relative;
  display:flex;
  flex-direction:row;
  z-index: 1;
}
.shopcart-m-item:not(:last-child):after{
  content: '';
  position: absolute;
  bottom:0;
  right:0;
  width: 665rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.shopcart-item-pic {
  width: 128rpx;
  height: 128rpx;
  float: left;
  border: 1rpx solid #e0e0e0;
  margin-right: 16rpx;
}

.shopcart-item-pic image {
  width: 128rpx;
  height: 128rpx;
  overflow: hidden;
}

.shopcart-txt-t {
  overflow: hidden;
  height:72rpx;
}

.shpcart-item-txt {
  float: left;
  overflow: hidden;
  z-index: 1;
  flex: 1;
}

.shopcart-txt-name {
  float:left;
  width:320rpx;
  height:72rpx;
  line-height:36rpx;
  overflow:hidden;
  font-size:28rpx;
}

.shopcart-txt-saleprice {
  float: right;
}

.shopcart-txt-b {
  margin-top: 16rpx;
  overflow: hidden;
}

.shpcart-item-skuname {
  float: left;
  overflow: hidden;
  color: #747474;
}

.shopcart-invalid {
  background: #eee;
}

.shopcart-invalid .ck-txt {
  color: #fc7a7a;
}

.shopcart-b {
  position: fixed;
  z-index: 2;
  bottom: 0rpx;
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-top: 1rpx solid #e0e0e0;
}

.shopcart-total {
  float: left;
  color: #424242;
  font-size: 28rpx;
}

.shopcart-total-txt {
  padding: 0rpx 10rpx 0rpx 24rpx;
  float: left;
}

.shopcart-total-p {
  color: #ff5722;
  float: left;
}

.shopcart-total-p .saleprice {
  font-weight: bold;
  font-family: Arial;
  font-size: 32rpx;
  margin:0 16rpx;
  vertical-align: middle;
}

.shopcart-buy {
  float: right;
  color: #fff;
  background-image: -webkit-linear-gradient(-90deg, #ff1b1a, #ff5622);
  background-image: linear-gradient(-90deg, #ff1b1a, #ff5622);
  text-align: center;
  font-size: 36rpx;
  width: 185rpx;
}


.shopcart-item-edite-l {
  float: left;
  overflow: hidden;
  margin-right: 15rpx;
}

.shopcart-item-edite-r {
  float:right;
  width:120rpx;
  overflow:hidden;
  height:100%;
  line-height:194rpx;
  background:#f44336;
  position:absolute;
  right:0rpx;
  top:0;
  z-index:999;
  bottom:1rpx;
  text-align:center;
  color:#fff;
  border-bottom: 1rpx solid #e0e0e0;
  box-sizing: border-box;
}

.shpcart-item-edite-num {
  margin-bottom: 15rpx;
  height:72rpx;
  line-height:72rpx;
  overflow: hidden;
  text-align: center;
}

.shpcart-item-edite-num .musenum-l, .shpcart-item-edite-num .add-r {
  padding: 0 15rpx;
  color: #9e9e9e;
  font-size: 24px;
}

.shpcart-item-edite-num .plus_regular, .shpcart-item-edite-num .minus_regular {
  padding: 0 15rpx;
  color: #9e9e9e;
  font-size: 24px;
  overflow: hidden;
}

.shpcart-item-edite-num .musenum-l {
  float: left;
  overflow: hidden;
}

.shpcart-item-edite-num .m {
  float:left;
  overflow:hidden;
  text-align:center;
  width:210rpx;
  height:72rpx;
  line-height:72rpx;
  font-size:36rpx;
  color:#212121;
}

.shpcart-item-edite-num .add-r {
  float: right;
  overflow: hidden;
}

.shopcart-no {
  min-height: 1110rpx;
  width: 100%;
  display: flex;
  background: #fff;
  text-align:center;
  border-top:1rpx solid #e0e0e0
}

.shopcart-no image {
  width: 192rpx;
  height: 192rpx;
  margin:0 auto;
}
.shopcart-no .shopcart-no-item{margin:144rpx auto;}

.shopcart-no-item .btn_go{
  background: -webkit-linear-gradient(left, #ff5722, #FF1919); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(left, #ff5722, #FF1919); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(left, #ff5722, #FF1919); /* Firefox 3.6 - 15 */
  background: linear-gradient(left, #ff5722, #FF1919);
  color:#fff;
  border-radius:4px;
  width:144rpx;
  height:65rpx;
  font-size:28rpx;
  margin:auto;
  line-height:65rpx;

  }

