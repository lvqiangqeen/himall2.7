page {
  padding-bottom: 100rpx;
}

.page-section {
  font-size: 28rpx;
  overflow: hidden;
  background: #f5f5f5;
  margin-bottom: 56rpx;
}

.bg-white {
  background: #fff;
}

.countdown-banner {
  width: 100%;
  height: 160rpx;
  overflow: hidden;
  border-top: 1rpx solid #e0e0e0;
}

.countdown-banner image {
  display: inline;
}

.countdown-list {
  margin-top: 24rpx;
  overflow: hidden;
}

.countdown {
  padding: 30rpx 24rpx 30rpx 0;
  margin-left: 24rpx;
  border-bottom: 1rpx solid #e0e0e0;
  overflow: hidden;
}

.countdown .info{
  display: flex;
  flex-direction: row;
}

.countdown-info-pic {
  float: left;
  width: 144rpx;
  height: 144rpx;
  overflow: hidden;
}

.countdown-info-pic image {
  width: 144rpx;
  height: 144rpx;
}

.countdow-info-txt {
  float: right;
  overflow: hidden;
  margin-left: 16rpx;
  flex: 1;
}

.countdow-info-name {
  height: 80rpx;
  line-height: 40rpx;
  display: inline-block;word-break: break-all; overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2; -webkit-box-orient: vertical;
}

.countdow-info-b {
  margin-top: 8rpx;
  overflow: hidden;
  height: 56rpx;
  line-height: 56rpx;
}

.saleprice {
  float: left;
  color: #ff5722;
}

.saleprice .price {
  font-family: microsoft yahei;
  font-weight: bold;
  float: left;
  font-size: 32rpx;
}

.saleprice .oldprice {
  float: left;
  font-size: 24rpx;
  color: #bdbdbd;
  font-weight: 0;
  text-decoration: line-through;
  margin-left: 14rpx;
}

.countdown-btn {
  float: right;
  width: 160rpx;
  height: 56rpx;
  text-align: center;
  border-radius: 8rpx;
  color: #fff;
  background: -webkit-linear-gradient(left, #FF5722, #FF3333); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #FF5722, #FF3333); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #FF5722, #FF3333); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #FF5722, #FF3333);
}

.countdow-start {
   background: -webkit-linear-gradient(left, #03A9F4 , #0288d1); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(right, #03A9F4, #0288d1); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(right, #03A9F4, #0288d1); /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, #03A9F4 , #0288d1); 
}

